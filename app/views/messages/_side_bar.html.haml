.SideBar
  .Side-header
    .User-items
      %p.username 
        = current_user.name
      .User-icons
        = link_to new_group_path, class: "list" do
          = icon('far', 'edit', class: 'edit')
        = link_to edit_user_path(current_user), class: "list" do
          = icon('fas', 'cog')
  .SideBar__group
    - current_user.group.each do |group|
      .GroupBox
        = link_to group_messages_path(group) do
          %p.name
            = group.name
          %p.message
